<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16sp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/detail_sembol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/detail_gunluk_dusuk" />
    <TextView
        android:id="@+id/detail_fiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_sembol" />

    <TextView
        android:id="@+id/detail_gunluk_yuksek"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_gunluk_dusuk"
        android:layout_below="@+id/detail_gunluk_yuksek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/detail_fark"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_fiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_adet"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_gunluk_dusuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_tavan"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_fark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_hacim"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_adet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_taban"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_tavan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_alis"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_hacim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/degisim"
        android:textAlignment="textEnd"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_taban"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_satis"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_alis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressBarDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detail_satis">

    </ProgressBar>

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_marginTop="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progressBarDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>